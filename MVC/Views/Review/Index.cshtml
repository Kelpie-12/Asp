@model MVC.Data.Models.Review
@using MVC.Data.Models
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Review";

}
@using (Html.BeginForm(FormMethod.Post))
{

	<div class="mb-3">
		<label for="Author" class="form-label">Ваше имя</label>
		<input type="text" asp-for="Author" class="form-control" id="Author" name="Author" placeholder="Ваше имя" />
		<span asp-validation-for="Author" class="text-danger"></span>

	</div>
	<div class="mb-3">
		<label for="Text" class="form-label">Отзыв</label>
		<textarea class="form-control" asp-for="Text" id="Text" rows="3" name="Text" placeholder="Отзыв"></textarea>
		<span asp-validation-for="Text"></span>
	</div>
	<div class="mb-3">
		<label for="Rating" class="form-label">Оценка</label>
		<input id="Rating" type="number" min="1" max="5" asp-for="Rating" name="Rating" value="2025-05-20T08:30" />
		<span asp-validation-for="Rating"></span>
	</div>
	<div class="visually-hidden">
	<input asp-for="ProductId" value="@Model.ProductId"/> 	
	</div>
	<button class="btn btn-primary" asp-controller="Review" asp-action="AddNewReview" type="submit">Добавить</button>

}