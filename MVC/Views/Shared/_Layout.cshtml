
<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	@* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"  crossorigin="anonymous"> *@
	<link rel="stylesheet" href="~/bootstrap/css/bootstrap.css" />

	<title>@ViewBag.Title</title>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" asp-controller="Home" asp-action="Index">Home</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
				aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						@* <li class="nav-item">
                             @Html.ActionLink("View","index",new {id = 1}) *@
						@*   href=@Url.ActionLink("index", "Calc") 
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">  Home</a>
                        </li>*@
						@* <li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Calc" asp-action="Index">Калькулятор</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Review" asp-action="Index">Отзывы</a>
						</li> *@
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container-md">
		@if (IsSectionDefined("Header"))
		{
			<div class="border-bottom mb-5">@RenderSection("Header")</div>
		}
		<div class="card-body">
			@RenderBody()
		</div>
	</div>
	<script src="~/bootstrap/js/bootstrap.js"></script>
	@if (IsSectionDefined("Footer"))
	{
		<div class="border-top mt-5">
			@RenderSection("Footer")
		</div>
	}
</body>
</html>
