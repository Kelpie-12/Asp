@page
@model Restoran.Pages.MenuModel
@{
}
@{
	foreach (var item in Model.MenuModels)
	{
		<div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
			<div class="col">
				<div class="card mb-4 rounded-3 shadow-sm">
					<div class="card-header py-3">
						<h4 class="my-0 fw-normal" > @item.Name </h4>
					</div>
					<div class="card-body">
						<h1 class="card-title pricing-card-title" >@item.Price $</h1>
						<ul class="list-unstyled mt-3 mb-4">
							<li  >@item.Desc</li>												
						</ul>
						<button type="button" class="w-100 btn btn-lg btn-outline-primary" >Заказать</button>
					</div>
				</div>
			</div>					
		</div>
	}
}