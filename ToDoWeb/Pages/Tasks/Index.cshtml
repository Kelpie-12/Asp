@page
@model ToDoWeb.Tasks.IndexModel
@{
}
<a class="btn btn-primary" asp-area="" asp-page="/Tasks/NewTask">Добавить новую</a>


<hr />
@foreach (var task in Model.TaskService.GetAllUserTasks())
{
	<form method="post" class="row gx-3 gy-2 align-items-center">
		<div class="col-sm-3">
			<h5 class="card-title">@task.Header</h5>
		</div>
		<div class="col-auto">
			<button type="submit" asp-page-handler="Edit" class="btn btn-warning" asp-route-id="@task.Id">Редактировать</button>
		</div>
		<div class="col-auto">
			<button type="submit" asp-page-handler="Delete" class="btn btn-danger" asp-route-id="@task.Id">Удалить </button>
		</div>
		<div class="card mb-3">
			<div class="card-body">
				<p class="card-text">@task.Desc</p>
				<hr />
			</div>Дата: @task.Date.ToString();
		</div>

	</form>


}